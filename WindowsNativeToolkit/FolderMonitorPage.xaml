<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="WindowsNativeToolkit.FolderMonitorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowsNativeToolkit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:vm="using:WindowsNativeToolkit"
    x:DataType="vm:FolderMonitorPageViewModel">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock Text="Folder Monitor Page"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="32"/>
        <TextBlock Text="{Binding FolderPath, Mode=OneWay}" FontSize="16"/>
    </Grid>
</Page>
